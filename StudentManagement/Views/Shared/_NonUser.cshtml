<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Student Management System</title>
    @Styles.Render("~/Content/css")
    <style type="text/css">
        body *{
            box-sizing:border-box;
        }
        a{
            text-decoration:none;
        }
        .bg-dark *{
            color:white;
        }
    </style>
</head>
<body>
    <div class="d-flex w-100 p-4 bg-dark text-white justify-content-between">
        <h2>SMS</h2>
        <div class="leftpanel">
            @Html.ActionLink("About Us", "About", "Home")
            @if (User.Identity.IsAuthenticated)
            {
                @Html.ActionLink("Panel","Dashboard","Users")
            }
            else
            {
            @Html.ActionLink("Login", "Login", "Users")
            }
            <a href="result">Result</a>
            @*@Html.ActionLink("Result","ViewResult","Student")*@
        </div>
    </div>
    <div class="container">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/layout.js"></script>
</body>
</html>
